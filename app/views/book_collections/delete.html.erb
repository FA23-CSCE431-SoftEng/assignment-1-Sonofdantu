<%= link_to("Back to List", book_collections_path, class: 'back-link') %>

<div class="book_collections delete">
  <h2>Delete Book</h2>

  <%= form_for(@book, url: book_collection_path(@book), method: :delete) do |f| %>
    <p>Are you sure you want to permanently delete this book?</p>
    <p><%= @book.name %></p>

    <div class="form-buttons">
      <%= f.submit("Delete Book") %>
    </div>

  <% end %>
</div>
